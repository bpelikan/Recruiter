@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role Management";
}

<h2>Role Management</h2>

<div asp-validation-summary="All" class="text-danger"></div>
@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No roles defined yet. Please create the first role.</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Role ID</th>
            <th>Role name</th>
            <th>Actions</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Do you really want to delete this role?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<p>
    <a class="btn btn-primary" asp-action="AddRole">Add new role</a>
</p>