@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<IdentityRole>

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Role Management"];
    ViewData["Role Management"] = Localizer["Role Management"];
    ViewData["No roles defined yet. Please create the first role."] = Localizer["No roles defined yet. Please create the first role."];
    ViewData["Role ID"] = Localizer["Role ID"];
    ViewData["Role name"] = Localizer["Role name"];
    ViewData["Users"] = Localizer["Users"];
    ViewData["Do you really want to delete this role?"] = Localizer["Do you really want to delete this role?"];
    ViewData["Delete"] = Localizer["Delete"];
    ViewData["Add new role"] = Localizer["Add new role"];
    ViewData["Edit"] = Localizer["Edit"];
}

<h2>@ViewData["Role Management"]</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">@ViewData["No roles defined yet. Please create the first role."]</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>@ViewData["Role ID"]</th>
            <th>@ViewData["Role name"]</th>
            <th>#@ViewData["Users"]</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">@ViewData["Edit"]</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('@ViewData["Do you really want to delete this role?"]');">
                            @ViewData["Delete"]
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<p>
    <a class="btn btn-primary" asp-action="AddRole">@ViewData["Add new role"]</a>
</p>