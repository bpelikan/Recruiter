@model IEnumerable<Recruiter.Components.HRMenuItem>

<li class="dropdown">
    <a asp-controller="Application"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">HR Menu<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var menuItem in Model)
        {
            <li>
                <a asp-controller="@menuItem.ControllerValue" asp-action=@menuItem.ActionValue>@menuItem.DisplayValue</a>
            </li>
        }
    </ul>
</li>

