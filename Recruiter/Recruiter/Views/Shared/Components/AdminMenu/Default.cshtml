@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<Recruiter.Components.AdminMenuItem>

@inject IViewLocalizer Localizer

@{
    ViewData["Admin Menu"] = Localizer["Admin Menu"];
}

<li class="dropdown">
    <a asp-controller="Admin"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">@ViewData["Admin Menu"]<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var menuItem in Model)
        {
            <li>
                <a asp-controller="Admin" asp-action=@menuItem.ActionValue>@menuItem.DisplayValue</a>
            </li>
        }
    </ul>
</li>

