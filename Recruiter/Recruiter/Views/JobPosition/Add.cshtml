@model Recruiter.Models.JobPositionViewModels.AddJobPositionViewModel

@{
    ViewData["Title"] = "Add Job Position";
}

<h2>Add Job Position</h2>

<form asp-controller="JobPosition" asp-action="Add" method="post" class="form-horizontal" role="form">
    <h4>@*Enter the JobPosition details below*@</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea id="summernote" name="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <table class="table table-condensed table-bordered" header header-content="Application Stages Requirement">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ApplicationStagesRequirement)</th>
            <th>Required</th>
            <th>Default Responsible User</th>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.ApplicationStagesRequirement.IsApplicationApprovalRequired)</td>
            <td>@Html.CheckBoxFor(model => model.ApplicationStagesRequirement.IsApplicationApprovalRequired)</td>
            <td>
                <select asp-for="ApplicationStagesRequirement.DefaultResponsibleForApplicatioApprovalId" class="form-control" asp-items="ViewBag.DefaultResponsibleForApplicatioApprovalId">
                    <option selected value="">--- SELECT ---</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ApplicationStagesRequirement.IsPhoneCallRequired)</td>
            <td>@Html.CheckBoxFor(model => model.ApplicationStagesRequirement.IsPhoneCallRequired)</td>
            <td>
                <select asp-for="ApplicationStagesRequirement.DefaultResponsibleForPhoneCallId" class="form-control" asp-items="ViewBag.DefaultResponsibleForPhoneCallId">
                    <option selected value="">--- SELECT ---</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ApplicationStagesRequirement.IsHomeworkRequired)</td>
            <td>@Html.CheckBoxFor(model => model.ApplicationStagesRequirement.IsHomeworkRequired)</td>
            <td>
                <select asp-for="ApplicationStagesRequirement.DefaultResponsibleForHomeworkId" class="form-control" asp-items="ViewBag.DefaultResponsibleForHomeworkId">
                    <option selected value="">--- SELECT ---</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ApplicationStagesRequirement.IsInterviewRequired)</td>
            <td>@Html.CheckBoxFor(model => model.ApplicationStagesRequirement.IsInterviewRequired)</td>
            <td>
                <select asp-for="ApplicationStagesRequirement.DefaultResponsibleForInterviewId" class="form-control" asp-items="ViewBag.DefaultResponsibleForInterviewId">
                    <option selected value="">--- SELECT ---</option>
                </select>
            </td>
        </tr>
    </table>
