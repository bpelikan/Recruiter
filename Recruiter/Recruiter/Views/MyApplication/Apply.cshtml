@using Recruiter.Models.MyApplicationViewModels
@model ApplyApplicationViewModel

@{
    ViewData["Title"] = "Apply";
}

<h2>Apply</h2>

<form asp-controller="MyApplication" asp-action="Apply" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group" hidden>
        <label asp-for="JobPositionId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="JobPositionId" class="form-control" readonly="readonly" />
            <span asp-validation-for="JobPositionId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" hidden>
        <label asp-for="JobPositionName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="JobPositionName" class="form-control" readonly="readonly" value="@Model.JobPositionName" />
            <span asp-validation-for="JobPositionName" class="text-danger"></span>
        </div>
    </div>

    <label asp-for="JobPositionName" class="col-md-2 control-label">@Html.DisplayFor(model => model.JobPositionName)</label>

    <br /><br />

    <input type="file" name="cv" />
    <hr />
    <input class="btn btn-primary" type="submit" value="Send" />
    <a condition="@ViewData["ReturnUrl"] != null" class="btn btn-sm btn-default" href="@ViewData["ReturnUrl"]">Back</a>
    <a condition="@ViewData["ReturnUrl"] == null" class="btn btn-sm btn-default" asp-controller="Offer" asp-action="Index">Back</a>
</form>