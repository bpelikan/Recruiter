@model Recruiter.Models.ApplicationViewModels.ApplyApplicationViewModel

@{
    ViewData["Title"] = "Apply";
}

<h2>Apply</h2>

<form asp-controller="Application" asp-action="Apply" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="JobPositionId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="JobPositionId" class="form-control" readonly="readonly" />
            <span asp-validation-for="JobPositionId" class="text-danger"></span>
        </div>
    </div>

    <input type="file" name="cv" />
    <hr />
    <input class="btn btn-primary" type="submit" value="Send" />
</form> 